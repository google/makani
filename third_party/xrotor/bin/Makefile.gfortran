SHELL = sh
BINDIR = /home/codes/bin/

###================================================
###  Default compilers and flags

### Default system
FC = f77
FFLAGS = -O
FFLOPT = -O
#FFLAGS = -g -C -O0
#FFLOPT = -g -C -O0
INSTALLCMD = install -s

###  Plot libraries and link libs

PLTOBJ = -lPlt
#PLTOBJ = ../plotlib/libPlt.a 
#PLTOBJ = $(HOME)/lib/libPlt.a
#PLTOBJ = /usr/local/lib/libPlt.a

LIBS = -lX11
